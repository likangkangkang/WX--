/* pages/boundStudent/boundStudent.wxss */
.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.userinfo-nickname {
  color: #aaa;
}

.input {
  margin: 80rpx 0 40rpx 0;
  width: 100%;
}
label {
  display: inline-block;
  font-size: 40rpx;
  height: 40rpx;
  line-height: 40rpx;
  text-align: center
}
input {
  display: inline-block;
  width: 60%;
  height: 60rpx;
  margin-left: 20%;
  border-radius: 10px;
  border: 1px solid #000;
  padding-left: 20rpx;
}

button {
  margin-top: 40rpx;
  width: 40%;
  background-color: #0099ff;
  color: white;
}
