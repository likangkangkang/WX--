/* pages/personal/personal.wxss */

.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.userinfo-nickname {
  color: #aaa;
}

.nav {
  width: 100%;
  margin-top: 40rpx;
  margin-left: 20rpx;
}

.navItem {
  height: 60rpx;
  line-height: 60rpx;
  font-size: 35rpx;
  border-bottom: 1px solid #dadada;
  padding: 10rpx 0;
  position: relative;
}

.navIcon {
  height: 40rpx;
  width: 40rpx;
  margin-right: 20rpx;
}

.navMes {
  height: 40rpx;
  line-height: 40rpx;
}

.moreIcon {
  position: absolute;
  top: 20rpx;
  right: 40rpx;
  height: 40rpx;
  width: 40rpx;
}
